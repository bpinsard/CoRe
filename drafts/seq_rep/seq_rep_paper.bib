@article{rodriguez-sabate_functional_2017,
	title = {The functional connectivity in the motor loop of human basal ganglia},
	volume = {11},
	issn = {1931-7557, 1931-7565},
	url = {https://link.springer.com/article/10.1007/s11682-016-9512-y},
