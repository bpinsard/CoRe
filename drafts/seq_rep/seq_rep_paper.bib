	pmcid = {PMC2914143},
	keywords = {Adult, Algorithms, Female, Humans, Image Enhancement, Image Interpretation, Computer-Assisted, Magnetic Resonance Imaging, Male, Pattern Recognition, Automated, Reproducibility of Results, Sensitivity and Specificity, Visual Cortex, multivariate analysis, Evoked Potentials, Visual, Visual Perception},
