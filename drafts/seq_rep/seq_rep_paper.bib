	author = {Waters-Metenier, Sheena and Husain, Masud and Wiestler, Tobias and Diedrichsen, Jörn},
	month = jan,
	year = {2014},
	pmid = {24431461},
	keywords = {generalization, motor sequence, motor cortex, learning, motor synergy, tDCS},
	pages = {1037--1050}
}

@article{jankowski_distinct_2009,
	title = {Distinct striatal regions for planning and executing novel and automated movement sequences},
