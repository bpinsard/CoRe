	urldate = {2015-06-08},
	journal = {PLoS ONE},
	author = {Albouy, Geneviève and Fogel, Stuart and Pottiez, Hugo and Nguyen, Vo An and Ray, Laura and Lungu, Ovidiu and Carrier, Julie and Robertson, Edwin and Doyon, Julien},
