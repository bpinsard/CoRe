	keywords = {fMRI, hippocampus, sleep, striatum, motor sequence memory consolidation},
	pages = {985--1004},
	file = {Full Text PDF:/home/bpinsard/.mozilla/firefox/fhwe4uot.default/zotero/storage/9MXPNA84/Albouy et al. - 2013 - Hippocampus and striatum Dynamics and interaction.pdf:application/pdf;Snapshot:/home/bpinsard/.mozilla/firefox/fhwe4uot.default/zotero/storage/E5TAA6QR/abstract.html:text/html}
